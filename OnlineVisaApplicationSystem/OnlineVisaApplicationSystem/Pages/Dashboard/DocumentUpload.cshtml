@page "/Dashboard/DocumentUpload"
@model OnlineVisaApplicationSystem.Pages.Dashboard.DocumentUploadModel
@{
}


<form   id='registerForm' method="post">
    <main class="my-form">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Register</div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="phone_number" class="col-md-4 col-form-label text-md-right">Passport Scanned Copy</label>
                                <div class="col-md-6">
                                    <input type="file" id="phone_number" asp-for="PassportDocuments.File" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fileUpload2"  class="col-md-4 col-form-label text-md-right">Passport Size Photo</label>
                                <div class="col-md-6">
                                    <input type="file" id="fileUpload2" asp-for="PhotoDocuments.File" class="form-control">
                                    <span asp-validation-for="PhotoDocuments.File" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Save
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>
</form>